{
  "name": "gentyr-vscode",
  "displayName": "GENTYR Dashboard",
  "description": "VS Code companion for GENTYR framework - usage stats, deputy CTO status, task tracking",
  "version": "0.1.0",
  "publisher": "gentyr",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gentyr.openDashboard",
        "title": "GENTYR: Open Dashboard"
      },
      {
        "command": "gentyr.refreshDashboard",
        "title": "GENTYR: Refresh Dashboard"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:production": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "package": "npm run build:production && vsce package",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.webview.json"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.24.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.3.0"
  }
}
