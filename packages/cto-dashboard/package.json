{
  "name": "@gentyr/cto-dashboard",
  "version": "1.0.0",
  "description": "Ink-based CTO dashboard with timeline view",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gentyr-dashboard": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@pppp606/ink-chart": "^0.2.4",
    "better-sqlite3": "^12.6.2",
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "1.6.1",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20"
  }
}
